extend ../layout
block content-header
	h1 Your Profile

block content-body
	h2 Account
	table.table
		tr
			td Username
			td #{session.user.username}
		tr 
			td Email
			td #{session.user.email}
		tr
			td Id
			td #{session.user.accountId}
		tr
			td Type
			if session.user.isAdmin
				td Admin
			else
				td Normal
		
	h2 Eaters
	form#addEater(role='form' method='post')
		table.table.table-hover
			thead
				tr
					th Description
					th.col-xs-1.text-center Chef lvl
					th.col-xs-2
			tbody#eaters.vcenter
				//- Repeat for each
				tr(data-eaterId="2")
					td Jared the Chef
					td.col-xs-1.text-center 10
					td.col-xs-2.text-right
						.btn.owner
							span.glyphicon.glyphicon-star
						.btn.delete
							span.glyphicon.glyphicon-remove
				tr(date-eaterId="3")
					td Frankie the pleb
					td.col-xs-1.text-center 0
					td.col-xs-2.text-right
						.btn.owner
							span.glyphicon.glyphicon-star-empty
						.btn.delete
							span.glyphicon.glyphicon-remove
			tbody#eaterForm
				tr
					td
						input.form-control(type="text" placeholder="Describe this person" maxlength='100' required)
					td.col-xs-1
						select.form-control(name='gameId')
							- var i = 0
							while i <= 10
								option.form-control(value='#{i}') #{i++}
					td.col-xs-2.text-center
						button.btn#submit(type="submit") save
	.text-center
		.btn.addNew
			span.glyphicon.glyphicon-plus
	
	
	.col-sm-6
		for sub in submissions
			img()
	.col-sm-6
		for rec in savedRecipes
			.row
				img()
				span title
		
	
block localJS
	script(type='text/javascript' src='/js/public/login.js')
			
		